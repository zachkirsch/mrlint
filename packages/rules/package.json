{
  "name": "@mrlint/rules",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:fern-api/mrlint.git",
    "directory": "packages/rules"
  },
  "files": [
    "lib"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf ./lib && tsc --build --clean",
    "compile": "tsc --build",
    "test": "yarn compile && jest --passWithNoTests",
    "lint:eslint": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore",
    "lint:eslint:fix": "eslint --max-warnings 0 . --ignore-path=../../.eslintignore --fix",
    "format": "prettier --write --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "format:check": "prettier --check --ignore-unknown --ignore-path ../../shared/.prettierignore \"**\"",
    "depcheck": "depcheck"
  },
  "dependencies": {
    "@mrlint/commons": "workspace:*",
    "@mrlint/virtual-file-system": "workspace:*",
    "env-cmd": "toddbluhm/env-cmd",
    "immer": "^9.0.15",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@types/semver": "^7.3.10",
    "depcheck": "^1.4.3",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "package-json-type": "^1.0.3",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
